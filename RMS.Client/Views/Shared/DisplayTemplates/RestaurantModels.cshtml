@model ICollection<RMS.Client.Models.View.RestaurantModel>

@{
    Layout = null;
}


@foreach (var item in @Model)
{
    <div class="row margin-bottom-20">
        <div class="col-sm-2 sm-margin-bottom-20">
            <img class="img-responsive" src='@Url.Content(item.PhotoUrl ?? "//placehold.it/250")' alt="">
        </div>
        <div class="col-sm-7">
            <div class="news-v3-in-sm no-padding">
                <ul class="list-inline posted-info">
                    <li>
                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <span>
                                <i class="fa fa-star color-green"></i>
                            </span>
                        }
                    </li>
                    <li><i class="fa fa-comment-o"></i>
                        <span>@item.CommentCount</span> reviews</li>
                </ul>
                <h3><a href="@Url.Action("RestaurantDetail", "Restaurant", new { @Id = item.Id })">@item.Name</a></h3>
                <p>@item.Description.Substring(0, 30) ...</p>
            </div>
        </div>
    </div>
    
}

